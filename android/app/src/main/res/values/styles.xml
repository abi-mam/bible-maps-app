<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash screen theme -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Android 12+ background -->
        <item name="android:windowSplashScreenBackground">@color/colorBibleMapsDark</item>

        <!-- Android <12 fallback -->
        <item name="android:background">@drawable/splash_screen</item>

        <!-- Hide status and nav bars -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- No icons -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar uses Bible Maps green -->
        <item name="android:statusBarColor">@color/colorBibleMapsDark</item>
        <item name="android:windowLightStatusBar">false</item>
       
        <!-- Navigation bar stays unchanged -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>
